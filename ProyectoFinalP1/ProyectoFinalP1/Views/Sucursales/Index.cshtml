@model IEnumerable<ProyectoFinalP1.Models.Sucursale>

@{
    ViewData["Title"] = "Index";
}

<h1>Sucursales</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Crear nueva sucursal</a>
</p>


<!-- Se elimina el metodo si no se quiere ver la busqueda en el URL -->
<form asp-controller="Sucursales" asp-action="Index" method="get" class="search-form">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" /> |
        <input type="submit" name="Buscar" class="btn btn-sm btn-outline-dark" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.IdSucursal">Editar</a> |
                    <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.IdSucursal">Detalles</a> |
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.IdSucursal">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
